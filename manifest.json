{

  "name": "Task List",
  "version": "1.0",
  "description": "A simple task list extension",
  "manifest_version": 3,

  "icons": {
    "48": "dist/icons/icon-48.png"
  },

  "action": {
    "default_icon": "dist/icons/icon-48.png",
    "default_title": "Task List",
    "default_popup": "app.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": true
  },

  "permissions": ["storage", "unlimitedStorage"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{c2f91fbb-c7fb-4ed0-abe2-59b30cff591b}"
    }
  }

}